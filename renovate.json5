{
  "dependencyDashboard": "true",
    "major": {
        "dependencyDashboardApproval": "true"
    },
    "lockFileMaintenance": {
        "enabled": true
    },
    "extends": [
      "config:base", 
      ":switchToGradleLite",
      "schedule:daily"
    ],
  "regexManagers": [
     {
      "fileMatch": ["buildSrc/.+/Dependencies(-test)*.kt"],
       "matchStrings": ["[a-zA-Z]+Version = (?<currentValue>.*?)\n"],
      "versioningTemplate": "gradle"
      }
    ]
}
