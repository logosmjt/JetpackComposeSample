{
  "dependencyDashboard": "true",
    "major": {
        "dependencyDashboardApproval": "true"
    },
    "lockFileMaintenance": {
        "enabled": true
    },
    "extends": [
      "config:base", 
      ":switchToGradleLite",
      "schedule:daily"
    ],
  "regexManagers": [
     {
      "description": "Detect kt under buildSrc",
      "fileMatch": ["buildSrc/.+/Dependencies(-test)*.kt"],
      "matchStrings": [
        "^[A-Za-z]+Version = (?<currentValue>.*?)\n"
      ],
      "datasourceTemplate": "maven",
      "versioningTemplate": "gradle"
      }
    ]
}
