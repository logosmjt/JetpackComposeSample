{
  "dependencyDashboard": "true",
  "major": {
    "dependencyDashboardApproval": "true"
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "extends": [
    "config:base",
    ":switchToGradleLite"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "maven"
      ],
      "registryUrls": [
        "https://dl.google.com/android/maven2/",
        "https://mvnrepository.com/",
        "https://jcenter.bintray.com/"
      ]
    }
  ],
  "regexManagers": [
    {
      "description": "Detect kt under buildSrc",
      "fileMatch": [
        "(^|/)buildSrc/.*"
      ],
      "matchStrings": [
        "coilVersion = \"(?<currentValue>.*?)\"\n"
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "io.coil-kt:coil"
    }
  ]
}
